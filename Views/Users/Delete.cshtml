@model BibliotecaDigital.Models.User

@{
    ViewData["Title"] = "Confirmar Eliminación";
}

<h2>Confirmar Eliminación</h2>

<h4>¿Estás seguro de que deseas eliminar a @Model.Name?</h4>

<div class="card my-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>
            
            <dt class="col-sm-2">DNI</dt>
            <dd class="col-sm-10">@Model.DNI</dd>
            
            <dt class="col-sm-2">Teléfono</dt>
            <dd class="col-sm-10">@Model.Phone</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DNI" />
    <input type="hidden" asp-for="Name" />
    <input type="hidden" asp-for="Phone" />
    <input type="hidden" asp-for="Email" />

    <div class="form-group d-flex justify-content-end gap-3">
        <a class="btn btn-secondary" asp-action="Index" asp-controller="Users">Cancelar</a>
        <button type="submit" class="btn btn-danger w-50">Eliminar</button>
    </div>
</form>